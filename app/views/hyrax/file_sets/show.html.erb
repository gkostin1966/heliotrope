<% provide :page_title, @presenter.page_title %>
<% if parent.blank? %>
  <%= render "hyrax/file_sets/orphan_fileset", presenter: @presenter %>
<% else %>
<% provide :page_header do %>
  <%# render 'shared/survey' %>
  <%= render 'banner', actor: current_actor, asset: Sighrax.factory(@presenter.id) %>
  <!-- breadcrumbs -->
  <%= render 'shared/breadcrumbs' %>

  <!-- asset navigation -->
  <div class="row">
    <nav class="asset-navigation col-sm-12">
      <ul class="pager">
          <li class="previous">
          <% if @presenter.previous_id? %>
            <a href="<%= @presenter.previous_id %>" class="previous" data-turbolinks="false"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Previous</a>
          <% end %>
          </li>
          <li class="next">
          <% if @presenter.next_id? %>
            <a href="<%= @presenter.next_id %>" class="next" data-turbolinks="false">Next <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span></a>
          <% end %>
          </li>
      </ul>
    </nav>
  </div>
<% end %>

  <div id="maincontent" class="row asset">
    <!-- COinS for Zotero, etc -->
    <% if defined? @presenter.file_set_coins_title %>
      <span class="Z3988" title="<%= @presenter.file_set_coins_title %>"></span>
    <% end %>
    <!-- file_sets _media -->
    <div class="col-sm-6">
      <%= render "media", presenter: @presenter %>
    </div> <!-- / file_sets _media -->
    <!-- file_sets metadata and actions -->
    <div class="col-sm-6">
      <div class="row asset-attributes">
        <div class="col-sm-12">
          <h1 id="asset-title"><%= @presenter.title %></h1>
          <span class="section">From <em><%= link_to @presenter.monograph.title, main_app.monograph_catalog_path(@presenter.monograph_id) %></em>
            <% if @presenter.monograph.authors? %>
              by <%= render_markdown @presenter.monograph.authors %>
            <% end %>
          </span>
          <br />
          <%= render "attributes", presenter: @presenter %>
        </div>
      </div> <!-- /.asset-attributes -->
      <div class="row asset-actions">
        <div class="col-sm-12">
          <%= render "show_actions", presenter: @presenter, parent: parent %>
        </div>
      </div> <!-- /.asset-actions -->
    </div> <!-- / file_sets metadata and actions -->
  </div> <!-- /.asset -->
<% end %>
