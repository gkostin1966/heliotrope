<% this_years_nag = Bloodstone::Heliotrope.current_year_nag_product %>
<% nag_banner_cookie_name = Bloodstone::Heliotrope.current_year_nag_product_identifier + '_banner' %>
<div class="alert alert-info alert-dismissible nag-banner" role="alert" style="display: none;">
  <button type="button" onclick="nag_banner_button_no()" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&#x2715</span></button>
  <p class="message">Our latest Ebook Collection (<%= this_years_nag.name %>) is available for purchase now. Would you like to view it?</p>
  <button type="button" onclick="nag_banner_button_yes()" class="btn btn-primary btn-lg" data-dismiss="alert">Yes.</button>
  <button type="button" onclick="nag_banner_button_no()" class="btn btn-default btn-lg" data-dismiss="alert" aria-label="Close">No thanks.</button>
</div>
<script type="text/javascript">
    function nag_banner_button_yes(){
        Cookies.set('<%= nag_banner_cookie_name %>', 'clicked', { expires: 30 });
        window.open("<%= this_years_nag.purchase %>", "_blank");
    }
    function nag_banner_button_no(){
        Cookies.set('<%= nag_banner_cookie_name %>', 'ignore', { expires: 15 });
        location.href='#';
    }
</script>
