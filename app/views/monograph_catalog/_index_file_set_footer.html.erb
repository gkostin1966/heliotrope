<%
  if can? :edit, document.id
    presenter = Sighrax.hyrax_presenter(Sighrax.factory(document.id), current_ability)
%>
  <div class="row"><%= render "index_representative_form", member: presenter %></div>
  <div class="row"><%= render "hyrax/file_sets/actions", file_set: presenter %></div>
  <div class="row"><%= presenter.permission_badge %></div>
<% end %>

